<Window
    x:Class="EduCare.DesignPatterns.DataTransferObject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EduCare.DesignPatterns.DataTransferObject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Data Transfer Object Pattern"
    Width="525"
    Height="350"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            Name="grid"
            CanUserAddRows="False"
            CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CompanyName}"
                    Header="Company Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OrderDate}"
                    Header="Order Date" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ProductName}"
                    Header="Product Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Summary}"
                    Header="Summary" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
